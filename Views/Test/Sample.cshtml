@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        @{
            string msg = "Hi Anchal.";
            var day = DateTime.Now.DayOfWeek;
            string read = msg + "Today is " + day + ".";

            <p> @read</p>

            int i = 5;
        }
        <b> @i </b>

        @{
            int j = 0;
            for (i = 1; i <= 3; i++)
            {
                <p>
                    @for (j = 1; j <= i; j++)
                    {
                        <b>@j</b>
                    }
                </p>
            }
        }
    </div>
</body>
</html>
