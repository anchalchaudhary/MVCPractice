@model MVCTutorial.Models.ViewNames
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<style>
    .error{
        color: red;
    }
</style>
<div class="container" style="width:40%">
    @using (Html.BeginForm("Index", "MyNew", FormMethod.Post))
    {

        @Html.DropDownListFor(model => model.ID, ViewBag.BranchList as SelectList, "--Select--", new { @class = "form-control" })
        
        @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "error" })
        
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Your Name here" })
        
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "error" })
        
            @*<div class="checkbox">
                        @Html.CheckBoxFor(model => model.Remember)
                        Remember me
                    </div>*@
        <input type="submit" value="Submit" class="btn btn-block btn-primary" />
    }
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
